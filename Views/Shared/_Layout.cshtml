<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TicketSystem</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AlbumRegister.styles.css" asp-append-version="true" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            background-color: #f8f9fa;
        }
        .header-banner {
            background-color: #ffffff;
            color: #333;
            padding: 1.5rem 2rem;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }
        .header-banner h1 {
            margin: 0;
            font-size: 1.75rem;
            font-weight: 400;
        }
        .main-container {
            display: flex;
            flex: 1;
        }
        .sidebar {
            width: 250px;
            background-color: #ffffff;
            padding: 2rem 0;
            border-right: 1px solid #dee2e6;
        }
        .sidebar a {
            display: block;
            color: #495057;
            padding: 1rem 2rem;
            text-decoration: none;
            transition: all 0.2s;
            border-left: 3px solid transparent;
            font-weight: 400;
        }
        .sidebar a:hover {
            background-color: #f8f9fa;
            border-left-color: #495057;
            color: #212529;
        }
        .sidebar a.active {
            background-color: #f8f9fa;
            border-left-color: #495057;
            font-weight: 500;
        }
        .content-area {
            flex: 1;
            padding: 2rem;
            background-color: #f8f9fa;
        }
        footer {
            background-color: #ffffff;
            color: #6c757d;
            text-align: center;
            padding: 1rem;
            margin-top: auto;
            border-top: 1px solid #dee2e6;
            font-size: 0.875rem;
        }

        .table {
            background-color: #ffffff;
            border: 1px solid #dee2e6;
        }
        .table thead th {
            background-color: #f8f9fa;
            border-bottom: 2px solid #dee2e6;
            color: #495057;
            font-weight: 500;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
        }
        .table tbody tr {
            border-bottom: 1px solid #dee2e6;
        }
        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .btn-primary {
            background-color: #495057;
            border-color: #495057;
        }
        .btn-primary:hover {
            background-color: #343a40;
            border-color: #343a40;
        }
        .btn-warning {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #ffffff;
        }
        .btn-warning:hover {
            background-color: #5a6268;
            border-color: #5a6268;
        }
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }
        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .form-control {
            border: 1px solid #ced4da;
            background-color: #ffffff;
        }
        .form-control:focus {
            border-color: #495057;
            box-shadow: 0 0 0 0.2rem rgba(73, 80, 87, 0.25);
        }

        .card {
            border: 1px solid #dee2e6;
            background-color: #ffffff;
        }

        .btn-group .btn {
            border-radius: 0.25rem;
            margin: 0 0.125rem;
            font-size: 0.875rem;
            padding: 0.375rem 0.75rem;
        }
        .btn-group .btn-outline-secondary {
            color: #6c757d;
            border-color: #dee2e6;
            background-color: #ffffff;
        }
        .btn-group .btn-outline-secondary:hover {
            color: #495057;
            background-color: #f8f9fa;
            border-color: #dee2e6;
        }
        .btn-group .btn-dark {
            background-color: #495057;
            border-color: #495057;
        }
        .pagination-container {
            display: flex;
            justify-content: center;
            margin-top: 1.5rem;
        }
    </style>
</head>
<body>
    <header class="header-banner">
        <h1><a asp-controller="Home" asp-action="Index" style="text-decoration: none; color: inherit;">Ticket Management System</a></h1>
    </header>

    <div class="main-container">
        <nav class="sidebar">
            <a asp-controller="Home" asp-action="Index">Dashboard</a>
            <a asp-controller="Home" asp-action="Ticket">Tickets</a>
            <a asp-controller="Users" asp-action="Index">Users</a>
        </nav>

        <main class="content-area">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div>
            &copy; 2025 - Ticket Management System
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
